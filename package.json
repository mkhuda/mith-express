{
  "name": "mithril-framework",
  "version": "0.0.1",
  "description": "Mithril and Express Boilerplate",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel watch:server watch:build-dev",
    "start": "npm-run-all --parallel watch:server watch:build",
    "watch:build-dev": "webpack -d --watch",
    "watch:build": "webpack -p",
    "watch:server": "nodemon server --watch src/"
  },
  "keywords": [
    "mithril",
    "mithriljs",
    "express"
  ],
  "author": "Muhammad K. Huda",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.1.0",
    "css-loader": "^0.28.11",
    "express": "^4.16.3",
    "jquery": "^3.3.1",
    "mithril": "^1.1.6",
    "npm-run-all": "^4.1.2",
    "popper.js": "^1.14.3",
    "style-loader": "^0.21.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "clean-webpack-plugin": "^0.1.19",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.17.3",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.14"
  },
  "nodemonConfig": {
    "ignore": [
      "build/*"
    ],
    "delay": "1500"
  }
}
